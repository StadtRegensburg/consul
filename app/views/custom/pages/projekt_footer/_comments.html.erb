<% cache [locale_and_user_status, @current_order, commentable_cache_key(projekt), @comment_tree.comments, @comment_tree.comment_authors, projekt.comments.count] do %>
  <div class="row comments">
    <div id="comments" class="small-12 column">
      <%= render "shared/wide_order_selector", i18n_namespace: "comments", current_tab: '#tab-comments' %>

      <% if user_signed_in? && @projekt.present? %>
        <%= render "comments/form", { commentable: projekt, parent_id: nil } %>

      <% elsif user_signed_in? && @projekt.present? %>

        <div class='callout alert'>

          <% if current_user.geozone && @projekt.proposal_phase.geozone_restrictions.any? && !@projekt.proposal_phase.geozone_restriction_ids.include?(current_user.geozone.id) %>
            <%= t('custom.comments.restricted.geo_limitation', geozones: @projekt.proposal_phase.geozone_restrictions.names.join(', ')) %>
          <% end %>

          <% if @projekt.proposal_phase.active && @projekt.proposal_phase.end_date && @projekt.proposal_phase.end_date < Date.today %>
            <%= t('custom.comments.restricted.proposal_phase_expired')%>
          <% end %>

          <% if !@projekt.proposal_phase.active %>
            <%= t('custom.comments.restricted.proposal_phase_expired')%>
          <% end %>

        </div>

      <% elsif user_signed_in? && @projekt.nil? %>
        <%= render "comments/form", { commentable: projekt, parent_id: nil } %>

      <% else %>
        <br>
        <%= render "shared/login_to_comment" %>
      <% end %>

      <%= render "comments/comment_list", comments: @comment_tree.root_comments %>
      <%= paginate @comment_tree.root_comments %>
    </div>
  </div>
<% end %>
