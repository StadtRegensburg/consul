<% cache [locale_and_user_status, @current_order, commentable_cache_key(@poll), @comment_tree.comments, @comment_tree.comment_authors, @poll.comments_count] do %>
  <div class="row comments">
    <div id="comments" class="small-12 column">
      <%= render "shared/wide_order_selector", i18n_namespace: "comments" %>

      <% if user_signed_in? && can?(:answer, @poll) %>
        <%= render "comments/form", { commentable: @poll, parent_id: nil } %>

      <% elsif user_signed_in? %>

        <div class='commenting-not-allowed'>
          <ul>
            <% if current_user.geozone && @poll.geozones.any? && !@poll.geozone_ids.include?(current_user.geozone.id) %>
              <li><%= t('custom.comments.restricted.geo_limitation', geozones: @poll.geozones.names.join(', ')) %></li>
            <% end %>

            <% if @poll.ends_at < Date.today %>
              <li><%= t('custom.comments.restricted.poll_phase_expired')%></li>
            <% end %>

          </ul>
        </div>

      <% else %>
        <br>
        <%= render "shared/login_to_comment" %>
      <% end %>

      <%= render "comments/comment_list", comments: @comment_tree.root_comments %>
      <%= paginate @comment_tree.root_comments %>
    </div>
  </div>
<% end %>
