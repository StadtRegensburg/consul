<div id="<%= dom_id(question) %>" class="poll-question">
  <h3>
    <%= question.title %>
    <% if question.multiple %>
      <small class="multiple-answers-hint">
        (<%= t("poll_questions.show.question.multiple") %>)
      </small>
    <% end %>
  </h3>
  <p>
    <%= auto_link_already_sanitized_html wysiwyg(question.description) %>
  </p>

  <div id="<%= dom_id(question) %>_answers" class="padding">
    <%= render "polls/questions/answers", question: question, token: token %>
  </div>
</div>
