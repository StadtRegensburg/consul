    <li class='nav-element flyout-item js-access-flyout-menu-item focusable'
        tabindex="0"
        aria-label='<%= t("layouts.header.officing") %>'
        >
      <%= link_to t("layouts.header.officing"), officing_root_path, tabindex: "-1", aria: { hidden: true } %>
    </li>
  <% end %>

  <% if feature?(:sdg) && (current_user.administrator? || current_user.sdg_manager?) %>
    <li class='nav-element flyout-item js-access-flyout-menu-item focusable'
        tabindex="0"
        aria-label='<%= t("sdg_management.header.title") %>'
        >
      <%= link_to t("sdg_management.header.title"), sdg_management_root_path, tabindex: "-1", aria: { hidden: true } %>
