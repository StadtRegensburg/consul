<main class="budget-investment-new">
  <%= budgets_back_link_path %>

  <%= header %>

  <aside>
    <%= helpers.render_custom_block 'budget_investments_creation_recommendations' %>
  </aside>


  <% if investment.present? %>
    <%= render "/budgets/investments/form", form_url: budget_investment_path(budget, investment) %>
