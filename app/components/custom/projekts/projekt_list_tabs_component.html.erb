<ul class="projekt-list-tabs no-bullet submenu order-links">
  <% current_active_orders_sorted.each do |order| %>
    <% if Setting["extended_feature.projekts_overview_page_navigation.show_#{order}"] %>
      <li class="inline-block">
        <%= link_to link_path(order),
          class: html_class(order),
          title: title_for(order),
          remote: (controller_name == 'pages'),
          onclick: (controller_name == 'pages' ? '$(".spinner-placeholder").addClass("show-loader")' : '') do %>
          <%= content_tag tag_name(order), link_text(order) %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
